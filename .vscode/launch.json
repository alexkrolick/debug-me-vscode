{
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Backend",
      "program": "${workspaceFolder}/backend/server.js"
    },
    {
      "name": "Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceRoot}/frontend/src",
      "preLaunchTask": "Check frontend server is up"
    }
  ],
  "compounds": [
    {
      "name": "Backend/Frontend",
      "configurations": ["Frontend", "Backend"]
    }
  ]
}
